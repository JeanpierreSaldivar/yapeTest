<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/beer_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Home -->
    <style name="HomeTheme" parent="AppTheme">
        <item name="textInputStyle">@style/HomeTextTextInputLayout</item>
        <item name="editTextStyle">@style/HomeTextTextInputEditText</item>
    </style>

    <style name="HomeTextTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="HomeTextTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <style name="HomeBackground">
        <item name="android:background">@color/beer_color</item>
    </style>
    <!-- Detail -->

    <style name="DetailTheme" parent="AppTheme">
        <item name="textInputStyle">@style/DetailTextTextInputLayout</item>
        <item name="editTextStyle">@style/DetailTextTextInputEditText</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="DetailTextTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="DetailTextTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="DetailBackground">
        <item name="android:background">@color/beer_color</item>
    </style>
</resources>